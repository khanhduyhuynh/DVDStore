<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
 version="2.1">
    <managed-bean>
        <managed-bean-name>mainPageController</managed-bean-name>
        <managed-bean-class>com.capstone.Controller.MainPageController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>menuModel</property-name>
            <value>#{categoryMenuModel}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>loginController</managed-bean-name>
        <managed-bean-class>com.capstone.Controller.LoginController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>upload</property-name>
            <value>#{imageUploadController}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>themesController</managed-bean-name>
        <managed-bean-class>com.capstone.Controller.ThemesController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>gp</property-name>
            <value>#{guestPreferences}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>guestPreferences</managed-bean-name>
        <managed-bean-class>com.capstone.Controller.GuestPreferences</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>manageDataController</managed-bean-name>
        <managed-bean-class>com.capstone.Controller.ManageDataController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>upload</property-name>
            <value>#{imageUploadController}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>categoryMenuModel</managed-bean-name>
        <managed-bean-class>com.capstone.Controller.CategoryMenuModel</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>imageUploadController</managed-bean-name>
        <managed-bean-class>com.capstone.Controller.ImageUploadController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>manageMovieController</managed-bean-name>
        <managed-bean-class>com.capstone.Controller.ManageMovieController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>upload</property-name>
            <value>#{imageUploadController}</value>
        </managed-property>
        <managed-property>
            <property-name>manageDataController</property-name>
            <value>#{manageDataController}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>manageSoundtrackController</managed-bean-name>
        <managed-bean-class>com.capstone.Controller.ManageSoundtrackController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>upload</property-name>
            <value>#{imageUploadController}</value>
        </managed-property>
        <managed-property>
            <property-name>manageDataController</property-name>
            <value>#{manageDataController}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>manageGameController</managed-bean-name>
        <managed-bean-class>com.capstone.Controller.ManageGameController</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>upload</property-name>
            <value>#{imageUploadController}</value>
        </managed-property>
        <managed-property>
            <property-name>manageDataController</property-name>
            <value>#{manageDataController}</value>
        </managed-property>
    </managed-bean>
    
    <lifecycle>
        <phase-listener>com.capstone.Security.AuthorizationListener</phase-listener>
    </lifecycle>

    <navigation-rule>
      <from-view-id>*</from-view-id>
        <navigation-case>
          <from-outcome>loginPage</from-outcome>
          <to-view-id>/home.xhtml</to-view-id>
          <redirect />
        </navigation-case>
    </navigation-rule>
    
</faces-config>